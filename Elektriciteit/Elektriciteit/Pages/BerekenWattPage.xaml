<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Elektriciteit.Pages.BerekenWattPage">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
            <Frame BorderColor="#0679DE" 
                   Margin="7">
            <Label Text="Voor het berekenen van aantal vermogen watt moet je de ampere en (volt of ohm) weten"
                   FontSize="16" 
                   FontAttributes="Bold"
                   Padding="5"
                   TextColor="Black"/>
            </Frame>
            <Entry Placeholder="ampere"
                   x:Name="EnAmpere"
                   Margin="5,5,5,5"
                   TextChanged="EnAmpere_TextChanged"
                   Keyboard="Numeric"/>
            <Entry Placeholder="volt"
                   x:Name="EnVolt"
                   Margin="5,5,5,5"
                   TextChanged="EnVolt_TextChanged"
                   Keyboard="Numeric"/>
            <Entry Placeholder="ohm"
                   x:Name="EnOhm"
                   Margin="5,5,5,5"
                   TextChanged="EnOhm_TextChanged"
                   Keyboard="Numeric"/>
            <Button Text="Bereken"
                    x:Name="BtnBereken"
                    Clicked="BtnBereken_Clicked"
                    IsEnabled="False"/>
                <Frame BorderColor="Red"
                   Margin="7">
                    <Label x:Name="LbResultaat"
                   MinimumHeightRequest="400"
                   FontSize="16" 
                   FontAttributes="Bold"
                   Padding="5"
                   TextColor="Red"/>
                </Frame>
                <Label Text="                                         "/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>