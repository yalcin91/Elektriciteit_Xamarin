<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Elektriciteit.Pages.KabelPage">
    <ContentPage.Content>
        <Grid Margin="5,5,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Frame Margin="7">
                <Image Grid.Row="0"
                   Aspect="Fill"
                   x:Name="imageNaam">
                </Image>
            </Frame>
            <StackLayout Orientation="Vertical"
                         Grid.Row="1">
                <Frame BorderColor="#0679DE" 
                   Margin="7">
                    <Label x:Name="LblDetail"
                       MinimumHeightRequest="400"
                       FontSize="Medium"
                       TextColor="Black" 
                       FontAttributes="Bold"/>
                </Frame>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>